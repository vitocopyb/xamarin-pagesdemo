        <Grid>
            <Button Text="Carousel Page1 Demo" />
        </Grid>
    </ContentPage>
    <ContentPage Title="Carousel 2" BackgroundColor="Aqua">
        <Grid>
            <Label Text="Carousel Page2 Demo" TextColor="Black" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
        </Grid>
    </ContentPage>
    <ContentPage Title="Carousel 3" BackgroundColor="Blue">
        <Grid>
            <Label Text="Carousel Page3 Demo" TextColor="White" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
